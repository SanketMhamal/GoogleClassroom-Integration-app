// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// --- NextAuth Models ---

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  
  // @db.Text is crucial for Google Tokens which are very long
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  
  // @db.Text is crucial for the long scope string
  scope             String? @db.Text
  
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // Relations to other models
  accounts      Account[]
  sessions      Session[] // <--- This was the missing line causing your error
  courses       Course[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- Classroom Data Models ---

model Course {
  id          String   @id
  name        String
  teacherId   String
  user        User     @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  assignments Assignment[]

  @@index([teacherId])
}

model Assignment {
  id          String   @id
  title       String
  formUrl     String?  @db.Text
  formId      String?
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  submissions Submission[]
  questions   Question[]

  @@index([courseId])
}

model Submission {
  id           String   @id @default(cuid())
  assignmentId String
  studentEmail String?
  answers      Json
  submittedAt  DateTime
  files        FormFile[]
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  @@index([assignmentId])
}

model Question {
  id           String     @id // Google Question ID
  assignmentId String
  title        String?    @db.Text
  type         String?    // RADIO, TEXT, CHECKBOX, etc.
  options      Json?      // Store options as JSON array
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  @@index([assignmentId])
}

model FormFile {
  id            String     @id @default(cuid())
  fileId        String     // Google Drive File ID
  name          String
  mimeType      String
  thumbnailLink String?    @db.Text
  webViewLink   String?    @db.Text
  submissionId  String
  submission    Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)

  @@index([submissionId])
}